SRCS = $(wildcard src/*.c) $(wildcard src/math/*.c) $(wildcard src/parcer/*.c) $(wildcard src/utils/*.c) $(wildcard src/constructors/*.c)
OBJS = $(SRCS:%.c=%.o)
NAME = result
CC = clang

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) -g libmlx.a -shared -framework OpenGL -framework AppKit $^ -o $(NAME)
%.o: %.c
	$(CC) -g -Wall -Wextra -Werror -c $^ -o $@
clean:
	rm $(OBJS)
fclean: clean
	rm result
re: fclean all
